<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <ImageButton
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/cardLogin"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
        android:src="@drawable/profile"
        android:background="#0000"
        android:scaleType="fitCenter"
        />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_35sdp"
        android:id="@+id/cardLogin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        app:cardCornerRadius="@dimen/_25sdp"
        android:backgroundTint="#0000"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:text="  Create Account  "
                android:textSize="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#fff"
                >

            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/Usertext"
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter User_Name"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:textColor="#474646"
        >

    </TextView>

    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/Usertext"
        android:id="@+id/UserName"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_45sdp"
        android:hint=" UserName "
        android:textColor="#474646"
        android:textColorHint="#646363"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#9E8888"
        android:inputType="textEmailAddress"
        >

    </EditText>


    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/Passtext"
        android:layout_below="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#403F3F"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        >

    </TextView>

    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/Passtext"
        android:id="@+id/UserPass"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_45sdp"
        android:hint=" Password "
        android:textColorHint="#B3B0B0"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#A09E9E"
        android:textColor="#DEDEDE"
        android:inputType="textEmailAddress"
        >

    </EditText>


    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/Passtext2"
        android:layout_below="@+id/UserPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re_Enter Password"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:textColor="#C5C2C2"
        >

    </TextView>



    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/Passtext2"
        android:id="@+id/UserPass2"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_45sdp"
        android:hint=" Password "
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:textColorHint="#C3C2C2"
        android:textColor="#DEDEDE"
        android:inputType="textEmailAddress"
        >
    </EditText>





    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        app:cardCornerRadius="@dimen/_25sdp"
        android:layout_below="@+id/UserPass2"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_25sdp"
                android:id="@+id/SignUp"
                android:backgroundTint="#0000"
                android:textColor="#fff"
                >
            </Button>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        app:cardCornerRadius="@dimen/_25sdp"
        android:layout_below="@+id/card2"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_20sdp"
                android:id="@+id/SignIn"
                android:backgroundTint="#0000"
                android:textColor="#fff"
                >
            </Button>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>